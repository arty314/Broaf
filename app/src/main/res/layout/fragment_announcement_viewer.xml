<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_2"
    tools:context=".AnnouncementViewerFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="120dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="제목"
                    android:id="@+id/real_title"
                    android:textSize="20dp"
                    android:fontFamily="@font/notosanskrbold"
                    android:layout_marginBottom="20dp"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/light_gray"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="날짜"
                    android:textSize="10dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/notice_date">

                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="내용"
                    android:id="@+id/real_content">

                </TextView>

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <!--커스텀 상단바(xml 최하단에 둘 것)-->
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:background="@color/white_2"
        android:paddingTop="10dp"
        android:gravity="center_vertical"
        >
        <ImageButton
            android:id="@+id/toolbar_announcement_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:background="@drawable/icon_back"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:text="공지"
            android:fontFamily="@font/notosanskrbold"
            android:textColor="@color/top_nav_text"
            />
    </androidx.appcompat.widget.Toolbar>
    <!--여기까지 상단바: 공지-->
</FrameLayout>