<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="411dp"
        android:layout_height="731dp"
        android:clipToOutline="true"
        android:background="#FFFFFF"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/textSignup"
            android:layout_width="129dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="135dp"
            android:text="회원가입"
            android:textSize="30sp"
            android:textAppearance="@style/some_id"
            android:gravity="center_horizontal|center_vertical" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/signupGroup"
            android:layout_width="275dp"
            android:layout_height="332dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="235.44dp">

            <EditText
                android:id="@+id/editNickname"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/regitextback"
                android:hint="닉네임"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/editID"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/regitextback"
                android:hint="아이디"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/editNickname" />

            <EditText
                android:id="@+id/editemail"
                android:layout_width="275dp"
                android:layout_height="60dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/regitextback"
                android:hint="이메일"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/editID" />

            <EditText
                android:id="@+id/editPW"
                android:layout_width="275dp"
                android:layout_height="60dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/regitextback"
                android:hint="비밀번호"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/editemail" />

            <EditText
                android:id="@+id/editPWcheck"
                android:layout_width="275dp"
                android:layout_height="60dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/regitextback"
                android:hint="비밀번호 확인"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/editPW" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/btnRegi"
            android:layout_width="120dp"
            android:layout_height="56dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="100dp"
            android:text="확인"
            android:textSize="18sp"
            android:background="@drawable/rectangle_3"
            android:elevation="1dp" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
