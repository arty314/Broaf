<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white_2"
    tools:context=".HomeFragment">



    <!--여기부터 도려내면 됨-->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_10">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <CheckBox
                    android:id="@+id/ck_attach_polygon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="shareTransform(circleWave)"
                    android:onClick="onCheckBoxClicked"/>

                <CheckBox
                    android:id="@+id/ck_add_shared_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="sharePosition(label)"
                    android:onClick="onCheckBoxClicked"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <CheckBox
                    android:id="@+id/ck_tracking_mode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="startTracking"
                    android:onClick="onCheckBoxClicked"/>

                <CheckBox
                    android:id="@+id/ck_tracking_rotation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="setTrackingRotation"
                    android:onClick="onCheckBoxClicked"
                    android:enabled="false"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <Button
                        android:id="@+id/btn_set_pos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/padding_1"
                        android:textAllCaps="false"
                        android:text="setPosition"
                        android:onClick="onButtonClicked"/>

                    <Button
                        android:id="@+id/btn_set_rotation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/padding_1"
                        android:textAllCaps="false"
                        android:text="setRotation"
                        android:onClick="onButtonClicked"/>

                    <Button
                        android:id="@+id/btn_move_to"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/padding_1"
                        android:textAllCaps="false"
                        android:text="moveTo + (800ms)"
                        android:onClick="onButtonClicked"/>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <Button
                        android:id="@+id/btn_rotate_to"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/padding_1"
                        android:textAllCaps="false"
                        android:text="rotateTo + (800ms)"
                        android:onClick="onButtonClicked"/>

                    <Button
                        android:id="@+id/btn_move_on_path"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/padding_1"
                        android:textAllCaps="false"
                        android:text="moveOnPath"
                        android:onClick="onButtonClicked"/>

                    <Button
                        android:id="@+id/btn_move_on_path_direction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/padding_1"
                        android:textAllCaps="false"
                        android:text="moveOnPath (direction)"
                        android:onClick="onButtonClicked"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>

    <!--카카오맵 화면 -->
    <com.kakao.vectormap.MapView
        android:id="@+id/map_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <!--여기까지카카오맵-->

    <!-- 게시글 검색창. -->
    <LinearLayout
        android:id="@+id/search_bar_main"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_margin="40dp"
        android:layout_gravity="center|top"
        android:padding="10dp"
        android:paddingBottom="20dp"
        android:background="@drawable/search_btn_background"
        android:elevation="4dp"
        >
        <EditText
            android:id="@+id/input_text_search"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="10dp"
            android:hint="게시글 검색"
            android:layout_weight="1"
            android:background="@android:color/transparent"

            android:inputType="text"
            android:maxLines="1"
            />
        <ImageButton
            android:id="@+id/btn_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/search"
            android:layout_gravity="center"
            android:backgroundTint="@android:color/transparent"
            />
    </LinearLayout>
    <!--여기까지 게시글 검색창-->

    <!--임시 버튼 리스트-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/txtResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="200dp"
            android:text="temp text"
            />

        <Button
            android:id="@+id/viewpost_map_other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="임시 게시글 열람 버튼\n(게시글 뷰어 frag 생성)"
            />

        <!--필요하시면 밑에 임시 버튼 더 다셔도 돼요-->

    </LinearLayout>
    <!--여기까지 임시 버튼들-->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:layout_marginBottom="100dp"
        android:paddingHorizontal="5dp"
        android:layout_marginHorizontal="20dp"
        android:clipToPadding="false"
        >
        <ImageButton
            android:id="@+id/btn_follow_my_pos"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/icon_follow_my_pos"
            android:background="@drawable/post_viewer_background"
            android:backgroundTint="@color/cream"
            android:layout_gravity="top"
            android:elevation="2dp"
            />

        <ImageButton
            android:id="@+id/btn_new"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/icon_new"
            android:background="@drawable/post_viewer_background"
            android:backgroundTint="@color/cream"
            android:layout_gravity="top|end"
            android:elevation="2dp"
            />
    </FrameLayout>







    <!--/////////-->
    <!--게시글 뷰어 frame-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/frame_layout_post_viewer"
        />
</FrameLayout>